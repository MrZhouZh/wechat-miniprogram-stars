<!--pages/me/me.wxml-->
<view class="container">
    <view class="page-hd">
        <view class="page-hd__info">
            <view class="page-hd__border">
                <view class="page-hd__pic">
                    <image src="{{userPic}}"/>
                </view>
            </view> 
            <view class="page-hd__name">{{name}}</view>
            <view class="page-hd__mythings">
                <view class="mythings-push" bindtap="toMyPush">
                    <view class="mythings-num">{{starslen}}</view>
                    <view class="mythings-text">我的发表</view></view>
                <view class="mythings-collect">
                    <view class="mythings-num">{{collectLen}}</view> 
                    <view class="mythings-text">我的收藏</view></view>
            </view>
        </view>
    </view>
    <view class="page-bd">
        <view class="page-bd__items">
            <view class="bd-item" bindtap="toWallet">
                <image src="../../images/wallet.png" />
                <view class="bd-item__info">钱包</view>
            </view>
        </view>
        <view class="page-bd__items">
            <view class="bd-item">
                <image src="../../images/settings.png" />
                <view class="bd-item__info">设置</view>
            </view>
            <view class="bd-item">
                <image src="../../images/help.png" />
                <view class="bd-item__info">帮助与反馈</view>
            </view>
        </view>
        <view class="page-bd__items">
            <view class="bd-item">
                <image src="../../images/email.png" />
                <view class="bd-item__info">邀请码</view>
            </view>
            <view class="bd-item" bindtap="toRank">
                <image src="../../images/rank.png" />
                <view class="bd-item__info">活跃星球排行榜</view>
            </view>
        </view>
    </view>
</view>
